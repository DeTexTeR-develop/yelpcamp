<% layout('/layouts/boilerplate') %> 
    <h1>This all are our Campgrounds</h1>
    <div>
        <a href=""></a>
    </div>
        <% for(let camp of allcamprounds){ %>
            <div class="card" mb-2>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%=camp.images[0].url%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= camp.title %> 
                            </h5>
                            <p class="card-text">
                                <%= camp.description %> 
                            </p>
                            <p class="card-text">
                                <small class="text-muted"><%= camp.location %> </small>
                            </p>
                            <a href="/campgrounds/<%= camp._id %> " class="btn btn-primary">View <%= camp.title %> </a>
                        </div>
                    </div>
                </div>

            </div>
        <% } %>  
 
    <a class="mt-5 btn btn-primary" href="/campgrounds/create"> Create New Campground</a>
