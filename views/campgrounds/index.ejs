<% layout('/layouts/boilerplate') %> 

<!-- cluster map -->

<div id="map" style="width:100%; height:500px;">

</div>
    <h1>This all are our Campgrounds</h1>
    <div>
        <a href=""></a>
    </div>
        <% for(let camp of allcamprounds){ %>
            <div class="card" mb-2>
                <div class="row">
                    <div class="col-md-4">
                        <% if(camp.images.length) {%>
                            <img class="img-fluid" alt="" src="<%=camp.images[0].url%>" style="max-height: 400px;">
                        <% }else{ %>
                            <img class="img-fluid"  style="max-height: 400px;" src="https://images.unsplash.com/photo-1508138221679-760a23a2285b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8cmFuZG9tfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60" alt="no image available">
                        <% } %>  
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= camp.title %> 
                            </h5>
                            <p class="card-text">
                                <%= camp.description %> 
                            </p>
                            <p class="card-text">
                                <small class="text-muted"><%= camp.location %> </small>
                            </p>
                            <a href="/campgrounds/<%= camp._id %> " class="btn btn-primary">View <%= camp.title %> </a>
                        </div>
                    </div>
                </div>

            </div>
        <% } %>  
 
    <a class="mt-5 btn btn-primary" href="/campgrounds/create"> Create New Campground</a>

    <script>
        const mapTokken = '<%-process.env.MAPBOX_TOKKEN%>';
    </script>
    <script src="/js/clustermap.js"></script>